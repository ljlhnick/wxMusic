.creator{
  margin-bottom: 1rem;
  border-bottom: 5px solid #b71ed7;
}
.create_avatar{
  display: block;width: 100px;height: 100px;border-radius: 50%;margin: 0 auto;
}
.nickname,.desc,.brand{
  display:block;text-align: center;font-size: 14px;margin: 0.5rem auto;color: orange;
}

.radio{
  width: 100%;
  margin:1rem 0;
}
.radio button{
  width: 30%;float: left;margin-top:5%;
}
.radio .right{
  display: block;float: left;margin-left: 0.5rem;
}
.radio .desc{
  font-size: 14px;
}

.ul{
  display:inline-block; margin-top:10px;
}
.li{
   display:inline-block;width: 100%;margin-bottom: 10px; clear: both;
   border-bottom: 1px solid #ff0068;
}
.li .left{
  width: 30%;
  float: left;
  margin-right:10px;
}
.li .left image{
  width: 100px;
  height: 100px;
}
.right text{
  display: block;width: 100%;padding:0.3rem 0.1rem;
}